<Window x:Class="PasswordResetApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Reset App" Height="300" Width="350">
    <StackPanel Margin="10">
        <TextBlock Text="Enter Password:" Margin="5"/>
        <TextBox x:Name="PasswordTextBox" Margin="5"/>

        <Button Content="Create and Encrypt Password" Margin="5" Click="EncryptPasswordButton_Click"/>

        <TextBlock Text="Brute Force Password:" Margin="10,20,5,5"/>
        <TextBlock Text="Max Threads:" Margin="5"/>
        <TextBox x:Name="MaxThreadsTextBox" Margin="5" Text="4"/>
        <Button Content="Start Brute Force Attack" Margin="5" Click="StartBruteForceButton_Click"/>

        <TextBlock x:Name="ResultTextBlock" Margin="10,20,5,5" TextWrapping="Wrap"/>
        <TextBlock x:Name="TimeTakenTextBlock" Margin="5" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
